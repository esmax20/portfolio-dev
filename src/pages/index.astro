---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import SocialPill from '../components/SocialPill.astro';
import MailIcon from '../components/icons/Mail.astro';
import BriefcaseIcon from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Projects from '../components/Projects.astro';

---

<Layout
	title="Portfolio de Maximiliano Esbiza - Desarrollador y Programador Web con exeperiencia."
	description='Contrata a Maximiliano Esbiza para desarrollar paginas web con React y JavaScript.'
	>
	<main class="px-4">
		<SectionContainer class="py-44 pb-24">
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex 
				flex-row gap-x-4 pb-6 lg:pb-10">
				Hola, soy Maximiliano <a
					href="https://www.linkedin.com/in/maximilianoesbiza"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center">
					<Badge>Disponible para trabajar</Badge>
				</a></h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">+1 a√±o de experiencia. Desarrollador web. De Salta, Argentina.
				Poco a recibirse y buscando incurrir de en el desarrollo Full-Stack.
			</h2>

			<nav class="flex gap-x-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/maximilianoesbiza">
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/esmax20">
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill href="mailto:m.esbiza97@gmail.com">
					<MailIcon class="size-4 md:size-6"/>
					m.esbiza97@gmail.com
				</SocialPill>
			</nav>				
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
				<BriefcaseIcon class="size-7" />
				Experiencia laboral
			</h2>
			<Experience/>
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
